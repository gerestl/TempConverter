<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.geres.tempconverter.MainActivity">

    <TextView
        android:id="@+id/degreesTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dregrees"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/fahrenheitTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fahrenheit"
        android:textColor="@android:color/black"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/fahrenheitET"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.285"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="74dp" />

    <EditText
        android:id="@+id/fahrenheitET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/fahrenheitTV"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textSize="14sp"
        android:layout_marginRight="109dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="41dp"
        app:layout_constraintTop_toBottomOf="@+id/degreesTV" />

    <TextView
        android:id="@+id/celciusLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Celsius"
        android:textColor="@android:color/black"
        android:layout_marginLeft="26dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="357dp"
        app:layout_constraintRight_toLeftOf="@+id/celciusTV"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/fahrenheitTV"
        app:layout_constraintVertical_bias="0.973" />

    <TextView
        android:id="@+id/celciusTV"
        android:layout_width="165dp"
        android:layout_height="34dp"
        android:textAlignment="textEnd"
        android:textColor="@android:color/black"
        tools:ignore="RtlCompat"
        android:layout_marginRight="109dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="358dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/fahrenheitET"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>
